                <a href="javascript:;">gift guides</a>
              </li>
            </ul>
          </li> -->
        </ul>
        <form class="inputbox">
          <input required="required"/>
          <button type="reset" class="del"></button>
        </form>
      </div>
    </div>
    
  <%= yield %>

    <div class="footer">
      <div class="share">
        <a href="javascript:;">
          Refer a friend &amp; Get $15&nbsp;&nbsp;
          <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
        </a>
      </div>
      <div class="copyright">
        <div>Â© Ugmonk, Inc. 2016</div>
        <div>Website layout, design elements, content, and all product designs are the property of Ugmonk, Inc.<br>
          and may not be used for any purpose without express written consent of Ugmonk, Inc.</div>
      </div>
    </div>
    <div class="goTop-btn">
      <a href="javascript:;">
        <i class="fa fa-long-arrow-up" aria-hidden="true"></i>
      </a>
    </div>
  </div>
  <div class="container">
    <%= link_to 'Home', root_path %>
    <%= link_to 'Merchandises', merchandises_path %>
    <%= link_to 'Users', users_path %>
    <% if logged_in? %>
      <%= link_to "Edit Your Profile", edit_user_path(current_user) %>
      <%= link_to "View Your Homepage", user_path(current_user) %>
      <%= "Role: Admin" if current_user.admin? %>
      <%= link_to 'Logout', logout_path, method: :delete %>
    <% else %>
      <%= link_to 'Login', login_path %>
      <%= link_to 'Signup', signup_path %>
    <% end %>

    <%= yield %>
  </div>
  <!--<%= debug(params) if Rails.env.development? %>-->
</body>
</html>
